SEPARADOR = ("-"*100)

while True:
    print("")
    print(SEPARADOR)
    print("[1].- Registrar datos")
    print("[2].- Mostrar datos de Redaccion")
    print("[3].- Presupuesto de Operacion")
    print("[4].- Presupuesto Financiero")
    print("[5].- Salir")
    opcion = input("Ingresa la opcion elegida: ")
    print(SEPARADOR)

    if opcion=="1":
        print("Balance General al 31 de Diciembre del 2015")
        print(SEPARADOR)
        efectivo_2015=float(input("Ingrese el saldo de Efectivo del año 2015: "))
        clientes_2015=float(input("Ingrese el saldo de Clientes del año 2015: "))
        deudoresDiversos_2015=float(input("Ingrese el saldo de Deudores Diversos del año 2015: "))
        funcionariosyE_2015=float(input("Ingrese el saldo de Funcionarios y Empleados del año 2015: "))
        inventario_materiales_2015=float(input("Ingrese el saldo de Inventario de materiales del año 2015: "))
        inv_producto_terminado_2015=float(input("Ingrese el saldo de Inventario del producto terminado del año 2015: "))
        total_ActivoCirculante_2015 = efectivo_2015  + clientes_2015 + deudoresDiversos_2015 + funcionariosyE_2015 + inventario_materiales_2015 + inv_producto_terminado_2015

        terreno_2015=float(input("Ingrese el saldo de Terreno del año 2015: "))
        planta_equipo_2015=float(input("Ingrese el saldo de Planta y Equipo del año 2015: "))
        depreciacionAcu_2015=float(input("Ingrese el saldo de Depreciacion Acumulada del año 2015: "))
        total_ActivoNoCirculante_2015= terreno_2015 + planta_equipo_2015 + depreciacionAcu_2015

        activoTotal_2015= total_ActivoCirculante_2015 + total_ActivoNoCirculante_2015

        proveedores_2015=float(input("Ingrese el saldo de Proveedores del año 2015: "))
        documentosxpagar_2015=float(input("Ingrese el saldo de Documentos por pagar del año 2015: "))
        isr_x_pagar_2015=float(input("Ingrese el saldo de ISR por pagar del año 2015: "))
        total_pasivo_CP_2015= proveedores_2015 + documentosxpagar_2015 + isr_x_pagar_2015

        prestamos_bancarios_2015=float(input("Ingrese el saldo de Prestamos bancarios del año 2015: "))
        total_pasivo_LP_2015= prestamos_bancarios_2015

        pasivoTotal_2015= total_pasivo_CP_2015 + total_pasivo_LP_2015

        capitalContribuido_2015=float(input("Ingrese el saldo de Capital Contribuido del año 2015: "))
        capitalGanado_2015=float(input("Ingrese el saldo de Capital Ganado del año 2015: "))
        capitalContableTotal_2015= capitalContribuido_2015 + capitalGanado_2015

        suma_PasivoCapital_2015= pasivoTotal_2015 + capitalContableTotal_2015

        print("")
        print("REQUERIMIENTO DE MATERIALES: ")
        print(SEPARADOR)
        materia_primaA_CL= float(input("Ingrese los metros de la Materia Prima A del producto CL: "))
        materia_primaB_CL= float(input("Ingrese los metros de la Materia Prima B del producto CL: "))
        materia_primaC_CL= float(input("Ingrese los metros de la Materia Prima C del producto CL: "))
        horas_mano_obra_CL=float(input("Ingrese las horas de Mano de Obra del producto CL:"))
        print("")

        materia_primaA_CE= float(input("Ingrese los metros de la Materia Prima A del producto CE: "))
        materia_primaB_CE= float(input("Ingrese los metros de la Materia Prima B del producto CE: "))
        materia_primaC_CE= float(input("Ingrese los metros de la Materia Prima C del producto CE: "))
        horas_mano_obra_CE=float(input("Ingrese las horas de Mano de Obra del producto CE:"))
        print("")

        materia_primaA_CR= float(input("Ingrese los metros de la Materia Prima A del producto CR: "))
        materia_primaB_CR= float(input("Ingrese los metros de la Materia Prima B del producto CR: "))
        materia_primaC_CR= float(input("Ingrese los metros de la Materia Prima C del producto CR: "))
        horas_mano_obra_CR=float(input("Ingrese las horas de Mano de Obra del producto CR:"))
        print("")

        costo_mano_obra_1sem = float(input("Ingrese el Costo de Mano de Obra del Primer Semestre: "))
        costo_mano_obra_2sem = float(input("Ingrese el Costo de Mano de Obra del Segundo Semestre: "))
        print("")

        print("INFORMACION DE INVENTARIOS: ")
        print(SEPARADOR)
        inv_inicial_1semestre_MatprimaA=float(input("Ingrese el Inventario Inicial en el 1er Semestre de la Materia Prima A: "))
        inv_final_2semestre_MatprimaA=float(input("Ingrese el Inventario Final en el 2do Semestre de la Materia Prima A: "))
        costo_1semestre_MatprimaA=float(input("Ingrese el Costo en el 1er Semestre de la Materia Prima A: "))
        costo_2semestre_MatprimaA=float(input("Ingrese el Costo en el 2do Semestre de la Materia Prima A: "))
        print("")

        inv_inicial_1semestre_MatprimaB=float(input("Ingrese el Inventario Inicial en el 1er Semestre de la Materia Prima B: "))
        inv_final_2semestre_MatprimaB=float(input("Ingrese el Inventario Final en el 2do Semestre de la Materia Prima B: "))
        costo_1semestre_MatprimaB=float(input("Ingrese el Costo en el 1er Semestre de la Materia Prima B: "))
        costo_2semestre_MatprimaB=float(input("Ingrese el Costo en el 2do Semestre de la Materia Prima B: "))
        print("")

        inv_inicial_1semestre_MatprimaC=float(input("Ingrese el Inventario Inicial en el 1er Semestre de la Materia Prima C: "))
        inv_final_2semestre_MatprimaC=float(input("Ingrese el Inventario Final en el 2do Semestre de la Materia Prima C: "))
        costo_1semestre_MatprimaC=float(input("Ingrese el Costo en el 1er Semestre de la Materia Prima C: "))
        costo_2semestre_MatprimaC=float(input("Ingrese el Costo en el 2do Semestre de la Materia Prima C: "))
        print("")

        inv_inicial_1semestre_productoCL=float(input("Ingrese el Inventario Inicial en el 1er Semestre del Producto CL: "))
        inv_final_2semestre_productoCL=float(input("Ingrese el Inventario Final en el 2do Semestre del Producto CL: "))
        print("")

        inv_inicial_1semestre_productoCE=float(input("Ingrese el Inventario Inicial en el 1er Semestre del Producto CE: "))
        inv_final_2semestre_productoCE=float(input("Ingrese el Inventario Final en el 2do Semestre del Producto CE: "))
        print("")

        inv_inicial_1semestre_productoCR=float(input("Ingrese el Inventario Inicial en el 1er Semestre del Producto CR: "))
        inv_final_2semestre_productoCR=float(input("Ingrese el Inventario Final en el 2do Semestre del Producto CR: "))
        print("")

        print("PRODUCTOS")
        print(SEPARADOR)
        precio_venta_1semestre_CL = float(input("Ingrese el Precio de Venta de Primer Semestre del Producto CL: "))
        precio_venta_2semestre_CL = float(input("Ingrese el Precio de Venta de Segundo Semestre del Producto CL: "))
        ventas_planeadas_1semestre_CL = float(input("Ingrese las Ventas Planeadas de Primer Semestre del Producto CL: "))
        ventas_planeadas_2semestre_CL = float(input("Ingrese las Ventas Planeadas de Segundo Semestre del Producto CL: "))
        print("")

        precio_venta_1semestre_CE = float(input("Ingrese el Precio de Venta de Primer Semestre del Producto CE: "))
        precio_venta_2semestre_CE = float(input("Ingrese el Precio de Venta de Segundo Semestre del Producto CE: "))
        ventas_planeadas_1semestre_CE = float(input("Ingrese las Ventas Planeadas de Primer Semestre del Producto CE: "))
        ventas_planeadas_2semestre_CE= float(input("Ingrese las Ventas Planeadas de Segundo Semestre del Producto CE: "))
        print("")

        precio_venta_1semestre_CR = float(input("Ingrese el Precio de Venta de Primer Semestre del Producto CR: "))
        precio_venta_2semestre_CR = float(input("Ingrese el Precio de Venta de Segundo Semestre del Producto CR: "))
        ventas_planeadas_1semestre_CR = float(input("Ingrese las Ventas Planeadas de Primer Semestre del Producto CR: "))
        ventas_planeadas_2semestre_CR = float(input("Ingrese las Ventas Planeadas de Segundo Semestre del Producto CR: "))
        print("")

        print("GASTOS DE ADMINISTRACION Y VENTAS")
        print(SEPARADOR)
        depreciacion_1semestre_GADMIN = float(input("Ingrese la Depreciacion del 1er Semestre: "))
        depreciacion_2semestre_GADMIN = float(input("Ingrese la Depreciacion del 2do Semestre: "))
        sueldos_salarios_1sem_GADMIN = float(input("Ingrese los Sueldos y Salarios del 1er Semestre: "))
        sueldos_salarios_2sem_GADMIN = float(input("Ingrese los Sueldos y Salarios del 2do Semestre: "))
        varios_1semestre_GADMIN = float(input("Ingrese la cantidad de Varios del 1er Semestre: "))
        varios_2semestre_GADMIN = float(input("Ingrese la cantidad de Varios del 2do Semestre: "))
        intereses_prestamo_1sem_GADMIN = float(input("Ingrese los Intereses por Prestamo del 1er Semestre: "))
        intereses_prestamo_2sem_GADMIN = float(input("Ingrese los Intereses por Prestamo del 2do Semestre: "))
        print("")

        print("GASTOS DE FABRICACION INDIRECTOS")
        print(SEPARADOR)
        depreciacion_1sem_GFI = float(input("Ingrese la Depreciacion del 1er semestre: "))
        depreciacion_2sem_GFI = float(input("Ingrese la Depreciacion del 2do semestre: "))
        seguros_1sem_GFI = float(input("Ingrese los Seguros del 1er semestre: "))
        seguros_2sem_GFI = float(input("Ingrese los Seguros del 2do semestre: "))
        mantenimiento_1sem_GFI = float(input("Ingrese el Mantenimiento del 1er semestre: "))
        mantenimiento_2sem_GFI = float(input("Ingrese el Mantenimiento del 2do semestre: "))
        energeticos_1sem_GFI = float(input("Ingrese los Energeticos del 1er semestre: "))
        energeticos_2sem_GFI = float(input("Ingrese los Energeticos del 2do semestre: "))
        varios_1sem_GFI = float(input("Ingrese la cantidad de Varios del 1er semestre: "))
        varios_2sem_GFI = float(input("Ingrese la cantidad de Varios del 2do semestre: "))
        print("")

        print("DATOS ADICIONALES")
        print(SEPARADOR)
        equipo_nuevo=float(input("Ingrese el valor del Equipo Nuevo: "))
        ISR = 0.30
        PTU = 0.10
        print(f"En 2016 se adquirirá un equipo nuevo valuado en {equipo_nuevo} y no se depreciará durante el ejercicio presupuestado La Tasa de ISR es del 30%")
        print("La tasa del PTU es del 10%")
        print("En 2016 se cobrará el 100% el saldo de clientes del 2015 En 2016 se cobrará el 80% de las ventas presupuestadas")
        print("En 2016 se pagará el 100% del saldo de proveedores del 2015 En 2016 se pagará el 50% de las compras presupuesetadas")
        print("Se pagará el ISR del 2015.")
        print("")

        # Variables Utilizadas para el Presupuesto de Ventas
        importe_venta_2016CL_1sem = ventas_planeadas_1semestre_CL * precio_venta_1semestre_CL
        importe_venta_2016CL_2sem = ventas_planeadas_2semestre_CL * precio_venta_2semestre_CL
        importe_ventatotal_2016CL = importe_venta_2016CL_1sem + importe_venta_2016CL_2sem

        importe_venta_2016CE_1sem = ventas_planeadas_1semestre_CE * precio_venta_1semestre_CE
        importe_venta_2016CE_2sem = ventas_planeadas_2semestre_CE * precio_venta_2semestre_CE
        importe_ventatotal_2016CE = importe_venta_2016CE_1sem + importe_venta_2016CE_2sem

        importe_venta_2016CR_1sem = ventas_planeadas_1semestre_CR * precio_venta_1semestre_CR
        importe_venta_2016CR_2sem = ventas_planeadas_2semestre_CR * precio_venta_2semestre_CR
        importe_ventatotal_2016CR = importe_venta_2016CR_1sem + importe_venta_2016CR_2sem

        total_ventas1Semestre = importe_venta_2016CL_1sem+importe_venta_2016CE_1sem+importe_venta_2016CR_1sem
        total_ventas2Semestre = importe_venta_2016CL_2sem+importe_venta_2016CE_2sem+importe_venta_2016CR_2sem
        total_ventas2016 = importe_ventatotal_2016CL+importe_ventatotal_2016CE+importe_ventatotal_2016CR

        #Variables para la Determinacion del Saldo de Clientes y Flujo de Entradas
        total_clientes_2016=clientes_2015+total_ventas2016
        cobranza_2016=total_ventas2016*.80
        total_entradas_2016=clientes_2015+cobranza_2016
        clientes_2016=total_clientes_2016-total_entradas_2016

        # Variables para el Presupuesto de Produccion
        total_unidades_1semCL=ventas_planeadas_1semestre_CL+inv_inicial_1semestre_productoCL
        total_unidades_2semCL=ventas_planeadas_2semestre_CL+inv_final_2semestre_productoCL
        unidades_vender_2016CL=ventas_planeadas_1semestre_CL+ventas_planeadas_2semestre_CL
        total_unidades_2016CL=unidades_vender_2016CL+inv_final_2semestre_productoCL
        unidades_producir_1semCL=total_unidades_1semCL-inv_inicial_1semestre_productoCL
        unidades_producir_2semCL=total_unidades_2semCL-inv_inicial_1semestre_productoCL
        unidades_producir_2016CL=total_unidades_2016CL-inv_inicial_1semestre_productoCL

        total_unidades_1semCE=ventas_planeadas_1semestre_CE+inv_inicial_1semestre_productoCE
        total_unidades_2semCE=ventas_planeadas_2semestre_CE+inv_final_2semestre_productoCE
        unidades_vender_2016CE=ventas_planeadas_1semestre_CE+ventas_planeadas_2semestre_CE
        total_unidades_2016CE=unidades_vender_2016CE+inv_final_2semestre_productoCE
        unidades_producir_1semCE=total_unidades_1semCE-inv_inicial_1semestre_productoCE
        unidades_producir_2semCE=total_unidades_2semCE-inv_inicial_1semestre_productoCE
        unidades_producir_2016CE=total_unidades_2016CE-inv_inicial_1semestre_productoCE

        total_unidades_1semCR = ventas_planeadas_1semestre_CR+inv_inicial_1semestre_productoCR
        total_unidades_2semCR = ventas_planeadas_2semestre_CR+inv_final_2semestre_productoCR
        unidades_vender_2016CR = ventas_planeadas_1semestre_CR+ventas_planeadas_2semestre_CR
        total_unidades_2016CR = unidades_vender_2016CR+inv_final_2semestre_productoCR
        unidades_producir_1semCR = total_unidades_1semCR-inv_inicial_1semestre_productoCR
        unidades_producir_2semCR = total_unidades_2semCR-inv_inicial_1semestre_productoCR
        unidades_producir_2016CR = total_unidades_2016CR-inv_inicial_1semestre_productoCR

        # Variables utilizadas en el Presupuesto de Requerimiento de Materiales

        # Producto CL
        total_materialA_1semCL=unidades_producir_1semCL*materia_primaA_CL
        total_materialA_2semCL=unidades_producir_2semCL*materia_primaA_CL
        total_materialA_2016CL=unidades_producir_2016CL*materia_primaA_CL

        total_materialB_1semCL=unidades_producir_1semCL*materia_primaB_CL
        total_materialB_2semCL=unidades_producir_2semCL*materia_primaB_CL
        total_materialB_2016CL=unidades_producir_2016CL*materia_primaB_CL

        total_materialC_1semCL=unidades_producir_1semCL*materia_primaC_CL
        total_materialC_2semCL=unidades_producir_2semCL*materia_primaC_CL
        total_materialC_2016CL=unidades_producir_2016CL*materia_primaC_CL

        # Producto CE
        total_materialA_1semCE=unidades_producir_1semCE*materia_primaA_CE
        total_materialA_2semCE=unidades_producir_2semCE*materia_primaA_CE
        total_materialA_2016CE=unidades_producir_2016CE*materia_primaA_CE

        total_materialB_1semCE=unidades_producir_1semCE*materia_primaB_CE
        total_materialB_2semCE=unidades_producir_2semCE*materia_primaB_CE
        total_materialB_2016CE=unidades_producir_2016CE*materia_primaB_CE

        total_materialC_1semCE=unidades_producir_1semCE*materia_primaC_CE
        total_materialC_2semCE=unidades_producir_2semCE*materia_primaC_CE
        total_materialC_2016CE=unidades_producir_2016CE*materia_primaC_CE

        # Producto CR
        total_materialA_1semCR=unidades_producir_1semCR*materia_primaA_CR
        total_materialA_2semCR=unidades_producir_2semCR*materia_primaA_CR
        total_materialA_2016CR=unidades_producir_2016CR*materia_primaA_CR

        total_materialB_1semCR=unidades_producir_1semCR*materia_primaB_CR
        total_materialB_2semCR=unidades_producir_2semCR*materia_primaB_CR
        total_materialB_2016CR=unidades_producir_2016CR*materia_primaB_CR

        total_materialC_1semCR=unidades_producir_1semCR*materia_primaC_CR
        total_materialC_2semCR=unidades_producir_2semCR*materia_primaC_CR
        total_materialC_2016CR=unidades_producir_2016CR*materia_primaC_CR

        # Total de Requerimientos
        materialA_TOTAL_1sem = total_materialA_1semCL+total_materialA_1semCE+total_materialA_1semCR
        materialA_TOTAL_2sem = total_materialA_2semCL+total_materialA_2semCE+total_materialA_2semCR
        materialA_TOTAL_2016 = total_materialA_2016CL+total_materialA_2016CE+total_materialA_2016CR

        materialB_TOTAL_1sem = total_materialB_1semCL+total_materialB_1semCE+total_materialB_1semCR
        materialB_TOTAL_2sem = total_materialB_2semCL+total_materialB_2semCE+total_materialB_2semCR
        materialB_TOTAL_2016 = total_materialB_2016CL+total_materialB_2016CE+total_materialB_2016CR

        materialC_TOTAL_1sem = total_materialC_1semCL+total_materialC_1semCE+total_materialC_1semCR
        materialC_TOTAL_2sem = total_materialC_2semCL+total_materialC_2semCE+total_materialC_2semCR
        materialC_TOTAL_2016 = total_materialC_2016CL+total_materialC_2016CE+total_materialC_2016CR

        #Variables para el Presupuesto de Compras de Materiales
        #Material A
        totalMaterialesA_1sem = materialA_TOTAL_1sem + inv_inicial_1semestre_MatprimaA
        totalMaterialesA_2sem = materialA_TOTAL_2sem + inv_final_2semestre_MatprimaA
        totalMaterialesA_2016 = materialA_TOTAL_2016 + inv_final_2semestre_MatprimaA

        materialComprarA_1sem = totalMaterialesA_1sem-inv_inicial_1semestre_MatprimaA
        materialComprarA_2sem = totalMaterialesA_2sem-inv_inicial_1semestre_MatprimaA
        materialComprarA_2016 = totalMaterialesA_2016-inv_inicial_1semestre_MatprimaA

        totalMaterialA_1sem_PESOS = materialComprarA_1sem*costo_1semestre_MatprimaA
        totalMaterialA_2sem_PESOS = materialComprarA_2sem*costo_2semestre_MatprimaA
        totalMaterialA_2016_PESOS = totalMaterialA_1sem_PESOS+totalMaterialA_2sem_PESOS

        #Material B
        totalMaterialesB_1sem = materialB_TOTAL_1sem + inv_inicial_1semestre_MatprimaB
        totalMaterialesB_2sem = materialB_TOTAL_2sem + inv_final_2semestre_MatprimaB
        totalMaterialesB_2016 = materialB_TOTAL_2016 + inv_final_2semestre_MatprimaB

        materialComprarB_1sem = totalMaterialesB_1sem-inv_inicial_1semestre_MatprimaB
        materialComprarB_2sem = totalMaterialesB_2sem-inv_inicial_1semestre_MatprimaB
        materialComprarB_2016 = totalMaterialesB_2016-inv_inicial_1semestre_MatprimaB

        totalMaterialB_1sem_PESOS = materialComprarB_1sem*costo_1semestre_MatprimaB
        totalMaterialB_2sem_PESOS = materialComprarB_2sem*costo_2semestre_MatprimaB
        totalMaterialB_2016_PESOS = totalMaterialB_1sem_PESOS+totalMaterialB_2sem_PESOS

        #Material C
        totalMaterialesC_1sem = materialC_TOTAL_1sem + inv_inicial_1semestre_MatprimaC
        totalMaterialesC_2sem = materialC_TOTAL_2sem + inv_final_2semestre_MatprimaC
        totalMaterialesC_2016 = materialC_TOTAL_2016 + inv_final_2semestre_MatprimaC

        materialComprarC_1sem = totalMaterialesC_1sem - inv_inicial_1semestre_MatprimaC
        materialComprarC_2sem = totalMaterialesC_2sem - inv_inicial_1semestre_MatprimaC
        materialComprarC_2016 = totalMaterialesC_2016 - inv_inicial_1semestre_MatprimaC

        totalMaterialC_1sem_PESOS = materialComprarC_1sem * costo_1semestre_MatprimaC
        totalMaterialC_2sem_PESOS = materialComprarC_2sem * costo_2semestre_MatprimaC
        totalMaterialC_2016_PESOS = totalMaterialC_1sem_PESOS + totalMaterialC_2sem_PESOS

        #Compras Totales
        compraTotal_1sem = totalMaterialA_1sem_PESOS + totalMaterialB_1sem_PESOS + totalMaterialC_1sem_PESOS
        compraTotal_2sem = totalMaterialA_2sem_PESOS + totalMaterialB_2sem_PESOS + totalMaterialC_2sem_PESOS
        compraTotal_2016 = totalMaterialA_2016_PESOS + totalMaterialB_2016_PESOS + totalMaterialC_2016_PESOS

        #Variables de la Determinacion del Saldo de Proveedores y Flujo de Salidas
        totalProveedores_2016 = proveedores_2015 + compraTotal_2016
        porProveedores_2016 = compraTotal_2016 * .50
        totalSalidas_2016 = proveedores_2015 + porProveedores_2016
        proveedores_2016 = totalProveedores_2016 - totalSalidas_2016

        # Variables del Presupuesto de Mano de Obra Directa
        #Producto CL
        totalHorasRequeridas_1semCL = unidades_producir_1semCL * horas_mano_obra_CL
        totalHorasRequeridas_2semCL = unidades_producir_2semCL * horas_mano_obra_CL
        totalHorasRequeridas_2016CL = unidades_producir_2016CL * horas_mano_obra_CL

        importeMOD_1semCL = totalHorasRequeridas_1semCL * costo_mano_obra_1sem
        importeMOD_2semCL = totalHorasRequeridas_2semCL * costo_mano_obra_2sem
        importeMOD_2016CL = importeMOD_1semCL + importeMOD_2semCL

        #Producto CE
        totalHorasRequeridas_1semCE = unidades_producir_1semCE * horas_mano_obra_CE
        totalHorasRequeridas_2semCE = unidades_producir_2semCE * horas_mano_obra_CE
        totalHorasRequeridas_2016CE = unidades_producir_2016CE * horas_mano_obra_CE

        importeMOD_1semCE = totalHorasRequeridas_1semCE * costo_mano_obra_1sem
        importeMOD_2semCE = totalHorasRequeridas_2semCE * costo_mano_obra_2sem
        importeMOD_2016CE = importeMOD_1semCE + importeMOD_2semCE

        #Producto CR
        totalHorasRequeridas_1semCR = unidades_producir_1semCR * horas_mano_obra_CR
        totalHorasRequeridas_2semCR = unidades_producir_2semCR * horas_mano_obra_CR
        totalHorasRequeridas_2016CR = unidades_producir_2016CR * horas_mano_obra_CR

        importeMOD_1semCR = totalHorasRequeridas_1semCR * costo_mano_obra_1sem
        importeMOD_2semCR = totalHorasRequeridas_2semCR * costo_mano_obra_2sem
        importeMOD_2016CR = importeMOD_1semCR + importeMOD_2semCR

        horasRequeridas_todosProductos_1sem = totalHorasRequeridas_1semCL+totalHorasRequeridas_1semCE+totalHorasRequeridas_1semCR
        horasRequeridas_todosProductos_2sem = totalHorasRequeridas_2semCL+totalHorasRequeridas_2semCE+totalHorasRequeridas_2semCR
        horasRequeridas_todosProductos_2016 = totalHorasRequeridas_2016CL+totalHorasRequeridas_2016CE+totalHorasRequeridas_2016CR

        totalMOD_1sem = importeMOD_1semCL + importeMOD_1semCE + importeMOD_1semCR
        totalMOD_2sem = importeMOD_2semCL + importeMOD_2semCE + importeMOD_2semCR
        totalMOD_2016 = importeMOD_2016CL + importeMOD_2016CE + importeMOD_2016CR

        # Variables del Presupuesto de Gastos Indirectos de Fabricacion
        depreciacion_2016_GIF = depreciacion_1sem_GFI + depreciacion_2sem_GFI
        seguros_2016_GIF = seguros_1sem_GFI + seguros_2sem_GFI
        mantenimiento_2016_GIF = mantenimiento_1sem_GFI + mantenimiento_2sem_GFI
        energeticos_2016_GIF = energeticos_1sem_GFI + energeticos_2sem_GFI
        varios_2016_GIF = varios_1sem_GFI + varios_1sem_GFI

        total_GIF_1sem = depreciacion_1sem_GFI + seguros_1sem_GFI + mantenimiento_1sem_GFI + energeticos_1sem_GFI + varios_1sem_GFI
        total_GIF_2sem = depreciacion_2sem_GFI + seguros_2sem_GFI + mantenimiento_2sem_GFI + energeticos_2sem_GFI + varios_2sem_GFI
        total_GIF_2016 = depreciacion_2016_GIF + seguros_2016_GIF + mantenimiento_2016_GIF + energeticos_2016_GIF + varios_2016_GIF

        costo_xHora_GIF = total_GIF_2016/horasRequeridas_todosProductos_2016

        # Variables del Presupuesto de Gastos de Operacion
        comisiones_1sem_GADMIN = total_ventas1Semestre * .01
        comisiones_2sem_GADMIN = total_ventas2Semestre * .01

        depreciacion_2016_GADMIN = depreciacion_1semestre_GADMIN + depreciacion_2semestre_GADMIN
        sueldos_Salarios_2016_GADMIN = sueldos_salarios_1sem_GADMIN + sueldos_salarios_2sem_GADMIN
        comisiones_2016_GADMIN = comisiones_1sem_GADMIN + comisiones_2sem_GADMIN
        varios_2016_GADMIN = varios_1semestre_GADMIN + varios_2semestre_GADMIN
        intereses_prestamo_2016_GADMIN = intereses_prestamo_1sem_GADMIN + intereses_prestamo_2sem_GADMIN

        totalGastosOperacion_1sem = depreciacion_1semestre_GADMIN + sueldos_salarios_1sem_GADMIN + comisiones_1sem_GADMIN + varios_1semestre_GADMIN + intereses_prestamo_1sem_GADMIN
        totalGastosOperacion_2sem = depreciacion_2semestre_GADMIN + sueldos_salarios_2sem_GADMIN + comisiones_2sem_GADMIN + varios_2semestre_GADMIN + intereses_prestamo_2sem_GADMIN
        totalGastosOperacion_2016 = depreciacion_2016_GADMIN + sueldos_Salarios_2016_GADMIN + comisiones_2016_GADMIN + varios_2016_GADMIN + intereses_prestamo_2016_GADMIN

        # Variables de Determinacion del Costo Unitario de Productos Terminados
        costoUnitario_MaterialA_CL=costo_2semestre_MatprimaA*materia_primaA_CL
        costoUnitario_MaterialB_CL=costo_2semestre_MatprimaB*materia_primaB_CL
        costoUnitario_MaterialC_CL=costo_2semestre_MatprimaC*materia_primaC_CL
        costoUnitario_ManoObra_CL=costo_mano_obra_2sem*horas_mano_obra_CL
        costoUnitario_GIF_CL=costo_xHora_GIF*horas_mano_obra_CL
        costoUnitario_CL = costoUnitario_MaterialA_CL + costoUnitario_MaterialB_CL + costoUnitario_MaterialC_CL + costoUnitario_ManoObra_CL + costoUnitario_GIF_CL

        costoUnitario_MaterialA_CE=costo_2semestre_MatprimaA*materia_primaA_CE
        costoUnitario_MaterialB_CE=costo_2semestre_MatprimaB*materia_primaB_CE
        costoUnitario_MaterialC_CE=costo_2semestre_MatprimaC*materia_primaC_CE
        costoUnitario_ManoObra_CE=costo_mano_obra_2sem*horas_mano_obra_CE
        costoUnitario_GIF_CE=costo_xHora_GIF*horas_mano_obra_CE
        costoUnitario_CE = costoUnitario_MaterialA_CE + costoUnitario_MaterialB_CE + costoUnitario_MaterialC_CE + costoUnitario_ManoObra_CE + costoUnitario_GIF_CE

        costoUnitario_MaterialA_CR=costo_2semestre_MatprimaA*materia_primaA_CR
        costoUnitario_MaterialB_CR=costo_2semestre_MatprimaB*materia_primaB_CR
        costoUnitario_MaterialC_CR=costo_2semestre_MatprimaC*materia_primaC_CR
        costoUnitario_ManoObra_CR=costo_mano_obra_2sem*horas_mano_obra_CR
        costoUnitario_GIF_CR=costo_xHora_GIF*horas_mano_obra_CR
        costoUnitario_CR = costoUnitario_MaterialA_CR + costoUnitario_MaterialB_CR + costoUnitario_MaterialC_CR + costoUnitario_ManoObra_CR + costoUnitario_GIF_CR

        #Variables de Valuacion de Inventarios Finales.
        costoTotal_MateriaA = inv_final_2semestre_MatprimaA * costo_2semestre_MatprimaA
        costoTotal_MateriaB = inv_final_2semestre_MatprimaB * costo_2semestre_MatprimaB
        costoTotal_MateriaC = inv_final_2semestre_MatprimaC * costo_2semestre_MatprimaC
        inv_final_materiales = costoTotal_MateriaA + costoTotal_MateriaB + costoTotal_MateriaC

        costoTotal_ProductoCL = inv_final_2semestre_productoCL * costoUnitario_CL
        costoTotal_ProductoCE = inv_final_2semestre_productoCE * costoUnitario_CE
        costoTotal_ProductoCR = inv_final_2semestre_productoCR * costoUnitario_CR
        inv_final_productosTerminados = costoTotal_ProductoCL + costoTotal_ProductoCE + costoTotal_ProductoCR

        #Variables de Estado de Costo de Produccion y Ventas
        materialDisponible = inventario_materiales_2015 + compraTotal_2016
        materialesUtilizados = materialDisponible - inv_final_materiales
        costoProduccion = materialesUtilizados + totalMOD_2016 + total_GIF_2016
        produccionDisponible = costoProduccion + inv_producto_terminado_2015
        costoVentas = produccionDisponible - inv_final_productosTerminados

        #Variables del Estado de Resultados
        utilidadBruta = total_ventas2016 - costoVentas
        utilidadOperacion = utilidadBruta - totalGastosOperacion_2016
        ISR_2016 = utilidadOperacion * ISR
        PTU_2016 = utilidadOperacion * PTU
        utilidadNeta = utilidadOperacion - ISR_2016 - PTU_2016

        #Variables del Estado de Flujo de Efectivo
        totalEntradas_EFE = cobranza_2016 + clientes_2015
        efectivoDisponible = efectivo_2015 + totalEntradas_EFE
        pago_GIF = total_GIF_2016-depreciacion_2016_GIF
        pago_GOp = totalGastosOperacion_2016-depreciacion_2016_GADMIN
        totalSalidas_EFE = porProveedores_2016 + proveedores_2015 + totalMOD_2016 + pago_GIF + pago_GOp + equipo_nuevo + isr_x_pagar_2015
        flujoEfectivo = efectivoDisponible - totalSalidas_EFE

        # Variables del Balance General 2016
        total_ActivoCirculante_2016 = flujoEfectivo + clientes_2016 + deudoresDiversos_2015 + funcionariosyE_2015 + inv_final_materiales + inv_final_productosTerminados
        planta_equipo_2016 = planta_equipo_2015 + equipo_nuevo
        depreciacionAcum_2016 = -depreciacionAcu_2015 - depreciacion_2016_GIF - depreciacion_2016_GADMIN
        total_ActivoNoCirculante_2016 = terreno_2015 + planta_equipo_2016 + depreciacionAcum_2016
        activoTotal_2016 = total_ActivoCirculante_2016 + total_ActivoNoCirculante_2016
        total_pasivo_CP_2016 = proveedores_2016 + documentosxpagar_2015 + ISR_2016 + PTU_2016
        pasivoTotal_2016 = total_pasivo_CP_2016 + total_pasivo_LP_2015
        totalCapitalContable = capitalContribuido_2015 + capitalGanado_2015 + utilidadNeta
        pasivoCapital = pasivoTotal_2016 + totalCapitalContable

    if opcion=="2":
